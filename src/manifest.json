{
  "manifest_version": 3,
  "name": "AnimestarsCards Statistics",
  "version": "2.0.1",
  "description": "Отображает статистику карт (владельцы, желающие, готовые к обмену) на сайтах animestars.org и asstars.tv",
  "permissions": [
    "storage",
    "https://api.github.com/*",
    "https://github.com/*"
  ],
  "host_permissions": [
    "https://animestars.org/*",
    "https://asstars.tv/*",
    "https://api.github.com/*",
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://animestars.org/*",
        "https://asstars.tv/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AnimestarsCards Statistics"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
